---
layout: "base.njk"
---

<div class="container">
	<header class="post-header">
		<h1 class="post-header__title">{{ title }}</h1>

		<div class="post-header__meta">
			<p>Posted <time datetime="{{ date }}">{{ date | postDate }}</time> Â· by {{ author.name }}</p>
		</div>

		{% if featured_image.src %}
		<figure>
			{% set src = featured_image.src %}
			{% set alt = featured_image.alt or "" %}
			{% image src, alt, true %} 
			{% if featured_image.caption or featured_image.cite %}
			<figcaption>
				{{ featured_image.caption }}
				{% if featured_image.caption | safe %}
					<cite>{{ featured_image.cite | safe }}</cite>
				{% endif %}
			</figcaption>
			{% endif %}
		{% endif %}
	</header>

	<article>
		{{ content | safe }}
	</article>
</div>